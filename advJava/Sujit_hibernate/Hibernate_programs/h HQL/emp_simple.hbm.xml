<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>

  <class name="com.emp.Employee" table="emp_master1">
	  <id name="id" type="int" column="empid">
	   <generator class="assigned"/>
	  </id>

	  <property name="name">
		 <column name="empname" />
	  </property>
	  <property name="sal">
		<column name="empsal"/>
	  </property>
	  <property name="joining">
		<column name="empdate"/>
	  </property>
   </class>
</hibernate-mapping>