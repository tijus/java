<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
  <class name="BookDetails" table="Book_Data">
	   <id name="code" type="int" column="code" >
	   <generator class="assigned"/>
	  </id>

	  <property name="name">
		 <column name="name" />
	  </property>
	  <property name="publication">
		<column name="publ_date" sql-type="datetime"/>
	  </property>
   </class>
</hibernate-mapping>